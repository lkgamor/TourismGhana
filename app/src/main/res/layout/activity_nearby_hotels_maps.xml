<RelativeLayout xmlns:android="https://schemas.android.com/apk/res/android"
    xmlns:android2="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android2:layout_width="wrap_content"
    android2:layout_height="wrap_content"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dashboard"
        tools:context="com.example.louis.tourismghana.NearbyHotelsMapsActivity" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">


       <!-- <android.support.design.widget.FloatingActionButton
            android:id="@+id/leisureBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/hotelsBtn"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginBottom="20dp"
            android:src="@drawable/beach"
            app:backgroundTint="@color/colorWhite"
            app:fabSize="normal" />-->

        <android.support.v7.widget.CardView
            android:id="@+id/fab5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/colorNavHeader"
            app:cardCornerRadius="15dp"
            android:foreground="?android:selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/hotelsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_business_black_24dp"
                    app:backgroundTint="@color/colorWhite"
                    app:fabSize="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/hotelsBtn"
                    android:layout_toRightOf="@+id/hotelsBtn"
                    android:text="Hotels"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorWhite"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/leisureBtn"
                    android:layout_toLeftOf="@+id/leisureBtn"
                    android:text="Leisure"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorWhite"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/leisureBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/beach"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    app:backgroundTint="@color/colorWhite"
                    app:fabSize="normal" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>